@{
    ViewData["Title"] = "Beranda";
}

<!--begin::Container-->
<div id="kt_content_container" class="container-fluid">
	<div class="card card-docs mb-2">
		<!--begin::Card header-->
		<div class="card-header">
			<h3 class="card-title align-items-start flex-column">
				<span class="card-label fw-bolder text-dark">Daftar Penyewaan</span>
			</h3>
		</div>
		<!--end::Card header-->
		<!--begin::Card body-->
		<div class="card-body">
			<!--begin::Wrapper-->
            <div class="d-flex flex-stack mb-5">
                <!--begin::Search-->
                <div class="d-flex align-items-center position-relative my-1">
                    <span class="svg-icon svg-icon-1 position-absolute ms-6">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
							<rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="black"></rect>
							<path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="black"></path>
						</svg>
                    </span>
                    <input type="text" data-kt-docs-table-filter="search" class="form-control form-control-solid w-300px ps-15" placeholder="Cari Judul/Pengarang/Jenis"/>
                </div>
                <!--end::Search-->
                <!--begin::Toolbar-->
                <div class="d-flex justify-content-end" data-kt-docs-table-toolbar="base">
                    <button type="button" class="btn btn-primary" onclick="editCat(event)">
                        <span class="svg-icon svg-icon-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
								<rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="black"></rect>
								<rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="black"></rect>
							</svg>
                        </span>
                        Sewa
                    </button>
                </div>
                <!--end::Toolbar-->
            </div>
            <!--end::Wrapper-->
            <!--begin::Datatable-->
            <table id="kt_datatable_example_1" class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                    <th></th>
                    <th>Judul Buku</th>
                    <th>Pengarang</th>
                    <th>Jenis Buku</th>
                    <th>Harga Sewa per Hari</th>
                    <th>Jumlah Hari Sewa</th>
                    <th>Total Sewa (Rp)</th>
                </tr>
                </thead>
                <tbody class="text-gray-600 fw-bold">
                </tbody>
                <tfoot>
                    <tr class="fw-bolder fs-6">
                        <th colspan="3" class="text-nowrap align-end">GRAND TOTAL SEWA:</th>
                        <th colspan="2" class="text-danger fs-3"></th>
                    </tr>
                </tfoot>
            </table>
            <!--end::Datatable-->
		</div>
		<!--end::Card body-->
	</div>
</div>
<!--end::Container-->

<div id="modalCat">
    @await Component.InvokeAsync("PriorityList")
</div>
@section Scripts
{
    <script src="~/js/site.js" type="text/javascript" asp-append-version="true"></script>
}